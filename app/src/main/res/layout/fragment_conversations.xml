<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConversationsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversation_track_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/message_edit_content" />

    <EditText
        android:id="@+id/message_edit_content"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/send_message"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/conversation_track_container"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="9dp"
        android:drawableTop="@android:drawable/ic_menu_send"
        android:icon="@android:drawable/ic_menu_send" />

</RelativeLayout>